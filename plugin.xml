<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-fullstory" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>FullStory</name>
    <preference name="FULLSTORY_VERSION" />
    <preference name="FULLSTORY_ORG" /> 
    <platform name="ios">
        <hook src="src/extendBuildPhase.js" type="after_platform_add" />
        <podspec>
            <pods>
                <pod name="FullStory" options=":http => 'https://ios-releases.fullstory.com/fullstory-1.37.0-xcframework.tar.gz'"/>
            </pods>
        </podspec>
    </platform>
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <preference name="fs_version" value="$FULLSTORY_VERSION" />
            <preference name="fs_org" value="$FULLSTORY_ORG" /> 
        </config-file>

        <framework src="src/android/plugin.gradle" custom="true" type="gradleReference"/>
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:name="com.fullstory.cordova.plugin.MainApplication"/>
        </edit-config>

        <source-file src="src/android/MainApplication.java" target-dir="src/com/fullstory/cordova/plugin/" />
        <hook type="before_build" src="hooks/configs.js" />
    </platform>
</plugin>